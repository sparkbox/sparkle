theme: herman
dest: docs/
src: sass/

display:
  access: public

herman:
  sass:
    implementation: sass
    includepaths: ['sass']
    use: ['true']
  extraDocs:
    - name: 'Changelog'
      path: CHANGELOG.md
    - name: 'Contributing'
      path: CONTRIBUTING.md
    - name: 'BSD3 License'
      path: LICENSE.txt

groups:
  Structure:
    api-settings: 'Optional Configuration'
    api-test: 'Describing Tests'
    api-report: 'Reporting Results'
  Assertions:
    api-assert-values: 'Testing Return Values'
    api-assert-output: 'Testing CSS Output'
    api-errors: 'Catching & Testing Errors'
